{
  "name": "platform-backend",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/fin-sazee/platform-backend.git",
  "author": "joorganaut <sazeespectra@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "tsc",
    "docker:dev": "docker-compose up --build",
    "dev": "yarn migrate:latest && cross-env NODE_ENV=development nodemon --watch 'src/**/*' -e ts --exec 'ts-node' src/server/server.ts",
    "start": "node dist/src/server/server.js",
    "lint": "lerna run lint --stream",
    "lint:fix": "lerna run lint:fix --stream",
    "migrate:new": "yarn knex migrate:make $1",
    "migrate:latest": "yarn knex migrate:latest",
    "migrate:rollback": "yarn knex migrate:rollback"
  },
  "workspaces": [
    "packages/*",
    "services/*"
  ],
  "dependencies": {
    "@babel/core": "^7.8.3",
    "@babel/preset-env": "^7.8.3",
    "@babel/preset-typescript": "^7.8.3",
    "@koa/cors": "3.1.0",
    "@types/jsonwebtoken": "8.5.1",
    "@types/knex": "^0.16.1",
    "@types/koa": "^2.11.2",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-json": "^2.0.18",
    "@types/koa-logger": "^3.1.1",
    "@types/koa-router": "^7.4.0",
    "@types/node": "^14.14.10",
    "@types/nodemailer": "6.4.4",
    "@types/openpgp": "4.4.15",
    "@types/redis": "2.8.28",
    "aws-sdk": "2.893.0",
    "axios": "0.21.1",
    "cross-env": "5.1.4",
    "csv-parser": "3.0.0",
    "dotenv": "8.2.0",
    "eslint": "^7.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "global": "4.4.0",
    "husky": "3.1.0",
    "ical-generator": "3.2.1",
    "jsonwebtoken": "8.5.1",
    "knex": "^0.21.10",
    "koa": "^2.11.0",
    "koa-bodyparser": "^4.2.1",
    "koa-helmet": "^6.0.0",
    "koa-json": "^2.0.2",
    "koa-logger": "^3.2.1",
    "koa-proxies": "^0.11.0",
    "koa-router": "^8.0.8",
    "lerna": "^4.0.0",
    "lint-staged": "^10.2.2",
    "moment": "2.29.1",
    "node-cron": "3.0.0",
    "nodemailer": "6.7.2",
    "nodemon": "1.17.3",
    "openpgp": "5.0.0-1",
    "pg": "8.5.1",
    "prettier": "^2.2.1",
    "redis": "3.1.2",
    "socket.io": "4.0.1",
    "socket.io-client": "4.0.1",
    "stripe": "8.164.0",
    "ts-md5": "1.2.7",
    "ts-node": "6.0.1",
    "tslint": "5.9.1",
    "typescript": "4.2.4",
    "uuid": "^8.3.1",
    "winston": "3.3.3"
  },
  "devDependencies": {},
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn lint"
    }
  },
  "lint-staged": {
    "services/**/*.{ts,tsx}": [
      "eslint --fix"
    ],
    "{README.md,tsconfig.json,.eslintrc.js,.prettierrc.js}": [
      "prettier --write"
    ]
  }
}
